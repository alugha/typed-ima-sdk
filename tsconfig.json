{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["dom", "es5", "es2015.promise"],
    "outDir": "./lib/esm",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./lib/typings"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./lib"]
}
